<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MineFragment">

    <!-- TODO: Update blank fragment layout -->
  <LinearLayout
      android:id="@+id/linear_mine"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="#008B00"
      >
      <Button
          android:id="@+id/sliding_mine"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:onClick="onClick"
          android:background="@mipmap/home_category"
          />
      <Button
          android:id="@+id/mine"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="我的"
          android:textSize="20sp"
          android:background="@null"
          android:onClick="onClick"
          android:textColor="@android:color/white"
          android:layout_marginLeft="90dp"
          />
      <Button
          android:id="@+id/exit"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="退出登录"
          android:visibility="invisible"
          android:textColor="#ffffff"
          android:background="#00000000"
          android:layout_marginLeft="60dp"
          />
  </LinearLayout>
    <ScrollView
        android:layout_below="@id/linear_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linear_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/my_top_bg"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:text="你还没有登录哦"
                android:visibility="visible"
                android:textColor="@android:color/white"
                android:id="@+id/textView6" />
            <Button
                android:id="@+id/load_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                android:visibility="visible"
                android:background="@null"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="60dp"
                android:onClick="onClick"
                android:textColor="@android:color/white"
                />
            <Button
                android:id="@+id/Login_sucess"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#00000000"
                android:gravity="center"
                android:visibility="gone"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true" />
            <Button
                android:id="@+id/commit_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:background="@null"
                android:layout_toRightOf="@id/load_mine"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="60dp"
                android:onClick="onClick"
                android:visibility="visible"
                android:textColor="@android:color/white"
                />
            <LinearLayout
                android:id="@+id/linear_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/commit_mine"
                android:layout_alignParentBottom="true"
                >
                <Button
                    android:id="@+id/orderMenu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/my_order"
                    android:text="我的订单"
                    android:background="@null"
                    android:onClick="onClick"
                    android:textColor="@android:color/white"
                    />
                <Button
                    android:id="@+id/mineCollect"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/my_collection"
                    android:text="我的收藏"
                    android:background="@null"
                    android:onClick="onClick"
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>
        </RelativeLayout>
     <ImageView
         android:layout_width="match_parent"
         android:layout_height="12dp"
         android:src="@mipmap/bg_main"
         android:scaleType="fitXY"
         />
      <LinearLayout
          android:id="@+id/pics_linear"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:clickable="true"
          >
          <ImageView
              android:layout_width="30dp"
              android:layout_height="40dp"
              android:layout_marginLeft="10dp"
              android:src="@mipmap/sharing_picture"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="我的图片"
              android:layout_marginTop="15dp"
              android:layout_marginLeft="20dp"
              />
          <ImageView
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:src="@mipmap/arrow_right"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="220dp"
              />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/avtivity_linear"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:clickable="true"
          >
          <ImageView
              android:layout_width="30dp"
              android:layout_height="40dp"
              android:layout_marginLeft="10dp"
              android:src="@mipmap/my_activity"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="我参加的活动"
              android:layout_marginTop="15dp"
              android:layout_marginLeft="20dp"
              />
          <ImageView
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:src="@mipmap/arrow_right"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="190dp"
              />
      </LinearLayout>

        <LinearLayout
            android:id="@+id/camera_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/my_camera"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="边走边拍"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/arrow_right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="220dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:src="@mipmap/bg_main"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:id="@+id/lable_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/my_label"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义标签"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/arrow_right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="210dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/infor_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/my_personal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人资料"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/arrow_right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="220dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/key_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/my_modify_key"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/arrow_right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="220dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:src="@mipmap/bg_main"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:id="@+id/setting_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/my_set"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/arrow_right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="250dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/about_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/my_about_us"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/arrow_right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="220dp"
                />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
