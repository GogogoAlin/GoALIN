<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_food"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        />
<TextView
    android:id="@+id/name_food"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="hahahaha"
    android:layout_toRightOf="@+id/image_food"
    android:textSize="20sp"
    />
<TextView
    android:id="@+id/infor_food"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ininiin"
    android:layout_toRightOf="@+id/image_food"
    android:lines="1"
    android:layout_marginTop="20dp"
    android:textSize="20sp"
    />
<TextView
    android:id="@+id/price_food"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="doller"
    android:layout_toRightOf="@+id/image_food"
    android:layout_marginTop="40dp"
    android:textSize="20sp"
    />
<TextView
    android:id="@+id/select_food"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="doller"
    android:layout_toRightOf="@+id/image_food"
    android:layout_marginTop="60dp"
    android:textSize="20sp"
    />
<TextView
    android:id="@+id/support_food"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="doller"
    android:layout_toRightOf="@+id/select_food"
    android:layout_marginTop="60dp"
    android:layout_marginLeft="10dp"
    android:textSize="20sp"
    />
    <TextView
        android:id="@+id/distance_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:text="500"
        android:layout_marginRight="10dp"
        />
</RelativeLayout>