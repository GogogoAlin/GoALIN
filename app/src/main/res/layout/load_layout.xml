<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#008B00"
    >
    <Button
        android:id="@+id/laod_back"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:background="@mipmap/back"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textColor="@android:color/white"
        android:layout_marginLeft="140dp"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/forget_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:layout_marginLeft="60dp"
        android:background="@null"
        android:textColor="@android:color/white"
        android:onClick="onClick"
        />
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/border"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/login_phone"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/login_phone_et"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="请输入手机号"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/border"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/login_password"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/login_mima_et"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="请输入密码"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
        <Button
            android:id="@+id/load_login_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#008B00"
            android:text="登录"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            />
    <Button
        android:id="@+id/nopay_commit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="290dp"
        android:background="@null"
        android:text="免费注册"
        android:textColor="#008B00"
        android:drawableRight="@mipmap/right"
        />
</LinearLayout>