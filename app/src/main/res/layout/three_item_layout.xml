<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/image_guide"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@mipmap/ic_launcher"
    />
    <TextView
        android:id="@+id/tv_name_guide"
        android:layout_marginLeft="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hahahahah"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/tv_size_guide"
        android:layout_marginLeft="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hahahahahb"
        android:layout_below="@id/tv_name_guide"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/tv_3d_guide"
        android:layout_marginLeft="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hahahahahb"
        android:layout_below="@id/tv_size_guide"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/tv_instance_guide"
        android:layout_marginLeft="280dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="haha"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        />
    <ImageView
        android:id="@+id/next_guide"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/guide_to"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        />

</RelativeLayout>